@{
	Layout = "_LayoutBoxTrainer";
}



<form role="form" onsubmit="PostReview()" class="row g-3 needs-validation">
	<div class="row">
		<div class="col-lg-6">
			<div class="card-body">
				<div class="form-group">
					<label>Project Title</label>
					<input type="text" class="form-control" id="re_title" placeholder="Project Title" disabled>
				</div>
				<div class="form-group">
					<label>Description</label>
					<textarea type="text" class="form-control" id="re_description" placeholder="Description" style="height: 150px;" disabled></textarea>
				</div>
				<div class="form-group">
					<label>NIK</label>
					<input type="text" class="form-control" id="re_nik" placeholder="NIK" disabled>
				</div>
				<div class="form-group">
					<label>Name</label>
					<input type="text" class="form-control" id="re_name" placeholder="Name" disabled>
				</div>
				<div class="form-group">
					<label>Email</label>
					<input type="text" class="form-control" id="re_email" placeholder="Email" disabled>
				</div>
				<div class="form-group">
					<label>Class</label>
					<input type="text" class="form-control" id="re_class" placeholder="Class" disabled>
				</div>
				<div class="form-group">
					<label>Batch</label>
					<input type="text" class="form-control" id="re_batch" placeholder="Batch" disabled>
				</div>
				<div class="form-group">
					<label>Current Status</label>
					<input type="text" class="form-control" id="re_currentstatus" placeholder="Current Status" disabled>
				</div>
			</div>
		</div>
		<div class="col-lg-6">
			<div class="card-body">
				<div class="form-group">
					<label for="status">Status</label>
					<select class="form-select" name="status" id="status" required>
						<option selected disabled value="">Choose...</option>
						<option value="2"> Give Revision </option>
						<option value="3"> Approve</option>
						<option value="4"> Decline </option>
					</select>
				</div>
				<div class="form-group">
					<label for="revision">Revision</label>
					<textarea type="text" class="form-control" id="revision" placeholder="Enter Your Revison" required></textarea>
				</div>
				<div class="form-group">
					<label for="message">Message</label>
					<textarea class="form-control" id="message" placeholder="Enter Your Message" required></textarea>
				</div>
				<div class="form-group">
					<div>
						<button type="submit" class="btn btn-info submit"><i class="fa fa-paper-plane" aria-hidden="true"></i>  Send Message</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>





